<html>
<head>
    {{>elements/header}}
</head>

<body>
    <div>
        {{>elements/navbar}}
    </div>

    <!-- Banner -->
    <div class="banner text-center justify-content-center align-self-center pt-2">
        <h1 class="pt-3">Login</h1>
    </div>
    <!-- Banner -->

    <div class="container.fluid">
        <div class="row">
          <!-- Inspiration Message (Left Side) -->
          <div class="blockLogin col ml-5 pl-5"></div>

          <!-- Login Form(Right Side) -->
          <div class="col text-center pt-5 mt-5 mr-5">
            <h4>Welcome back, ready to hit your goals?</h4>
          <div id="formContent">
        <!-- Login Form -->
            <form method="POST" action="/login">
            <div class="form-group">
                <label for="username" class="col-sm-2 mt-3 col-formlabel">
                    User Name
                </label>
                <div class="col-xs-3 mx-5">
                    <input type="text" class="form-control"  id="username" name="username" placeholder="Enter your username here...">
                </div>
            </div>
            <div class="form-group">
                <label for="password" class="col-sm-2 col-formlabel">
                    Password
                </label>
                <div class="col-xs-3 mx-5">
                    <input type="password" class="form-control"  id="password" name="password"placeholder="Enter your password here...">
                </div>
            </div>
            <input type="submit" class="btn text-white mt-2 px-5" style="background-color: #046880" value="Login">
            </form>
            <div class="text-center">
              <p>Don't have an account? <a class="text-dark" href="/register">Register Here</a></p>
            </div>
          </div>
          </div>
          <!-- Login Form -->
          </div>
        </div>
    </div>

</body>

<footer>
    {{>elements/footer}}
</footer>
</html>

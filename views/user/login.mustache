<html>
<head>
    {{>elements/header}}
</head>

<body>
    <div>
        {{>elements/navbar}}
    </div>

    <!-- Banner -->
    <div class="banner text-center justify-content-center align-self-center pt-4">
        <h1 class="pt-3">Login</h1>
    </div>
    <!-- Banner -->

    <div class="container.fluid">
        <div class="row">
          <!-- Inspiration Message (Left Side) -->
          <div class="blockLogin col ml-5 pl-5"></div>

          <!-- Login Form(Right Side) -->
          <div class="col text-center pt-5 mt-5 mr-5">
            <h4>Welcome back, ready to hit your goals?</h4>

          <!-- Login Form -->
          <div class="row pt-4">
          <div class="col" id="formContent">
            <form method="POST" action="/login">
                <div class="form-group">
                    <div class="col-xs-3 mx-5">
                      <label for="username">Username</label>
                      <input class="form-control" id="username" type="text" placeholder="Enter your username here...">
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-xs-3 mx-5">
                      <label for="password">Password</label>
                      <input class="form-control" id="password" type="password" placeholder="Enter your password here...">
                    </div>
                </div>
            <!-- Remember Me and Forgotten Password -->
            <div class="row">
              <div class="col d-flex justify-content-end">
                <div class="form-check">
                  <input class="form-check-input" type="checkbox" value="" id="rememberMe" unchecked />
                  <label class="form-check-label mr-5" for="rememberMe"> Remember me </label>
                  
                </div>
              </div>
            </div>
            <input type="submit" value="Sign In" class="btn btn-dark mt-2 px-5">
            </form>
            <!-- Register Buttons -->
            <div class="text-center">
              <p>Don't have an account? <a class="text-dark" href="/register">Register Here</a></p>
              <p>or sign up with:</p>
              <!-- Third Party Sign In -->
              <button type="button" class="btn btn-dark btn-floating">
                <i class="fa fa-facebook-f"></i>
              </button>
              <button type="button" class="btn btn-dark btn-floating">
                <i class="fa fa-google"></i>
              </button>
              <button type="button" class="btn btn-dark btn-floating">
                <i class="fa fa-twitter"></i>
              </button>
            </div>
          </div>
          </div>
          <!-- Login Form -->

          </div>
        </div>
    </div>

</body>

<footer>
    {{>elements/footer}}
</footer>
</html>